<div class="box2 bg-white">
  <div class="box-inner">
    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
      <h1>ログイン</h1>
      <div class="box-name">
        <%= f.label :name, "ニックネーム" %><br />
        <%= f.text_field :name, autofocus: true, :placeholder => "ニックネーム" %>
      </div>
      <div class="box-password">
        <div class="a-row">
          <div class="column-left">
            <%= f.label :password, "パスワード" %>
          </div>
        </div>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
      <div class="box-login">
        <%= f.submit "ログイン" %>
      </div>
    <% end %>
    <div class="box-newusr">
      <p><span>------------</span> 新しいお客様ですか？ <span>------------</span></p>
      <%= link_to "新規登録", new_user_registration_path %>
    </div>
  </div>
</div>