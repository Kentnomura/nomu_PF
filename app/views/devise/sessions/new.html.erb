<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h2 class="text-white">ログイン</h2>
      <h3 class="mt-3 mb-3 pb-1 text-white">会員の方はこちらからログイン</h3>
      <%= form_with model: @user, url: session_path(resource_name), local: true do |f| %>

      　<!--名前-->
        <div class="field text-white">
          <%= f.label :name,"ニックネーム" %><br />
          <%= f.text_field :name, autofocus: true, class: "name" %>
        </div>
        <!--パスワード-->
        <div class="field mt-3 text-white">
          <%= f.label :password,"パスワード(6文字以上)" %><br />
          <%= f.password_field :password, autocomplete: "off", class: "password" %>
        </div>
        <!--ログインボタン-->
        <div class="actions mt-3">
          <%= f.submit "ログイン" ,class: 'btn btn-primary'%>
        </div>
      <% end %>
      <div class="mt-3 text-white">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
