<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">
      <h2>新規会員登録</h2>
      <h3 class="mt-3 mb-3 pb-1">こちらから登録してください</h3>
      <%= form_with model: @user, url: user_registration_path do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <!--名前-->
        <div class="field">
          <%= f.label :name,"ニックネーム" %><br>
          <%= f.text_field :name %>
        </div>

        <!--メールアドレス-->
        <div class="field">
          <%= f.label :email,"メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <!--パスワード-->
        <div class="field">
          <%= f.label :password,"パスワード"%>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <!--パスワード(確認用)-->
        <div class="field">
          <%= f.label :password_confirmation,"パスワード(確認)" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <!--登録ボタン-->
        <div class="actions">
          <%= f.submit "新規登録" ,class: 'btn btn-sm btn-primary'%>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
