<div class="container">
  <div class="row mt-2 offset-1">
    <h2 class="col-3 head-line title_h2 bg-secondary text-white text-center">アカウント詳細</h2>
  </div>
</div>
  <!-- ユーザーの詳細 -->
<div class="container mt-3 px-5 px-sm-0">
  <div class="row">
    <div class="col-3">
      <%= image_tag @user.get_profile_image, size: '200x200', class:"rounded-circle" %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>
              <p class="h3 text-center text-white mt-3">ニックネーム</p>
            </th>
          </tr>
          <tr>
            <th>
              <p class="h1 text-center text-white"><%= @user.name %></p>
            </th>
          </tr>
          <% if @user.name != "guestuser" %>
            <tr>
              <th class="text text-center">
                <%= link_to user_followings_path(@user), class:"btn btn-info w-100" do %>
                  フォロー数:<%= @user.followings.count %>
                <% end %><br>
                <%= link_to  user_followers_path(@user), class:"btn btn-info mt-3 w-100" do %>
                  フォロワー数:<%= @user.followers.count %>
                <% end %>
              </th>
            </tr>
          <% end %>
          
        <!--もしuserでログイン中なら-->
        <% if @user.id == current_user.id %>
        　<!--なおかつ、userがgesutではなければ-->
          <% if @user.name != "guestuser" %>
            <tr>
              <th class="text text-center">
                <%= link_to "アカウント編集", edit_user_path(current_user.id), class: "btn btn-info w-100" %>
              </th>
            </tr>
          <% end %>
          <tr>
            <th class="text text-center">
              <p><%=link_to"いいね一覧",favorites_user_path(@user), class: "btn btn-info w-100" %></p>
            </th>
          </tr>
          <tr>
            <th>
              <p class="text-white">
                新規投稿はこちらから
                  <%= link_to new_post_animal_path do %>
                    <button type="button" class="btn btn-primary rounded-circle p-0" style="width:2rem;height:2rem;">＋</button>
                  <% end %>
               </p>
            </th>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

    <!-- ユーザーの投稿一覧 -->
    <div class="col-md-8 offset-1">
      <h2 class="col-4 offset-3 head-line title_h2 bg-dark text-white text-center">過去の投稿</h2>
      <div class="row row-cols-1 row-cols-md-2 g-2">
        <% @post_animals.each do |post_animal| %>
          <div class="col mb-2">
            <div class="card h-100" style="width: 18rem;">
              <%= link_to post_animal_path(post_animal.id) do %>  <!--投稿をリンク化-->
                <%= image_tag post_animal.get_image, class: "card-img-top", size: "200x200" %>
                <h5 class="card-title text-dark ml-3">
                  <%= post_animal.user.name %>
                </h5>
                <div class="card-body text-dark">
                  <p class="text text-dark">
                    <%= post_animal.caption %>
                  </p>
                  <div id="favorites_buttons_<%= post_animal.id %>">
                    <%= render "favorites/btn", post_animal: post_animal %>
                  </div>
                  <%= post_animal.created_at.strftime('%Y/%m/%d') %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<!--ページネーション-->
<div class="row mt-3">
  <div class="offset-5">
    <div class="text-center">
      <%= paginate @post_animals %>
    </div>
  </div>
</div>


