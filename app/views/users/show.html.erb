<div class="container">
  <div class="row mt-2">
    <h2 class="col-3 head-line title_h2 bg-secondary text-white text-center">アカウント詳細</h2>
  </div>
</div>
  <!-- ユーザーの詳細 -->
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= image_tag @user.get_profile_image, size: '200x200', class:"rounded-circle" %>
      <table class="table table-borderless">
        <tbody>
          <tr></tr>
          <tr>
            <th><p class="h3 text-center">ニックネーム</p></th>
          </tr>
          <tr>
            <th>
              <p class="h2 text-center"><%= @user.name %></p>
            </th>
          </tr>
        <% if @user.id == current_user.id %>
          <% if @user.name != "guestuser" %>
            <tr>
              <th class="text text-center">
                <%= link_to "プロフィール編集", edit_user_path(current_user.id), class: "btn btn-info" %>
              </th>
            </tr>
          <% end %>
          <tr>
            <th class="text text-center">
              <p><%=link_to"お気に入り記事",favorites_user_path(@user), class: "btn btn-info" %></p>
            </th>
          </tr>
          <tr>
            <th>新規投稿はこちらから</th>
            <th>
               <%= link_to new_post_animal_path do %>
                 <button type="button" class="btn btn-primary rounded-circle p-0" style="width:2rem;height:2rem;">＋</button>
               <% end %>
            </th>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

    <!-- ユーザーの投稿一覧 -->

    <div class="col-md-8 offset-1">
      <h2 class="col-4 offset-3 head-line title_h2 bg-dark text-white text-center">過去の投稿</h2>
      <div class="row row-cols-1 row-cols-md-2 g-2">
        <% @post_animals.each do |post_animal| %>
          <div class="col mb-2">
            <div class="card h-100" style="width: 18rem;">
              <%= link_to post_animal_path(post_animal.id) do %>
                <%= image_tag post_animal.get_image, class: "card-img-top", size: "200x200" %>
                <h5 class="card-title text-dark ml-3">
                  <%= post_animal.user.name %>
                </h5>
                <div class="card-body text-dark">
                  <%= post_animal.caption %><br>
                  <%= post_animal.created_at.strftime('%Y/%m/%d') %>
                  <%= render "favorites/btn", post_animal: post_animal %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="offset-5">
    <div class="text-center">
      <%= paginate @post_animals %>
    </div>
  </div>
</div>


