<div class="container">
  <div class="row mt-3">
    <h2 class="col-3 head-line title_h2 bg-secondary text-white text-center">アカウント編集</h2>
  </div>

  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= form_with model: @user do |f| %>
      <%= render "layouts/errors", ofj: @user %>
        <div class="form-group">
          <%= f.label :image %>
          <%= f.file_field :profile_image, class: "form-control-file user_image", accept: 'image/*' %>
        </div>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control name" %>
        </div>
        <div class="form-group">
          <%= f.submit class: 'btn btn-info' %>
        </div>
      <% end %>
    </div>
  </div>
</div>