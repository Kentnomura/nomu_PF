<div class="container">
  <div class="row mt-3">
    <h2 class="col-3 head-line title_h2 bg-secondary text-white text-center">アカウント編集</h2>
  </div>

  <!--uesr情報更新機能-->
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= form_with model: @user do |f| %>
      <!--エラー文-->
      <div class="text text-white bg-danger">
        <%= render "layouts/errors", ofj: @user %>
      </div>
        <div class="form-group">
          <%= f.label :image, class:"h4 text-white" %>
          <%= f.file_field :profile_image, class: "form-control-file user_image text-white", accept: 'image/*' %>
        </div>
        <div class="form-group">
          <%= f.label :name, class:"h4 text-white" %>
          <%= f.text_field :name, class: "form-control name" %>
        </div>
        <div class="form-group">
          <%= f.submit class: 'btn btn-info btn-lg' %>
          <%= link_to "退会", unsubscribe_path(current_user.id), class:"ml-auto btn btn-danger btn-lg text-right" %>
        </div>
      <% end %>
    </div>
  </div>
</div>