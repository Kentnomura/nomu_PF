<div class="container">
  <div class="row mt-2">
    <h2 class="col-xl-12　col-sm-12 head-line title_h2 bg-secondary text-white text-center">アカウント詳細</h2>
  </div>
</div>
  <!-- ユーザーの詳細 -->
<div class="container mt-3 px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3 col-sm-11">
      <div class="d-flex justify-content-center">
        <%= image_tag @user.get_profile_image, size: '200x200', class:"rounded-circle" %>
      </div>
        <table class="table table-borderless">
          <tbody>
            <tr></tr>
            <tr>
              <th><p class="h3 text-center">ニックネーム</p></th>
            </tr>
            <tr>
              <th>
                <p class="h2 text-center"><%= @user.name %></p>
              </th>
            </tr>
            <tr>
              <th class="text text-dark ">
                <%= link_to "退会？", edit_admins_user_path(@user),class:"btn bg-danger w-100" %>
              </th>
            </tr>
          </tbody>
      </table>
    </div>

    <div class="col-1"></div>
    <!-- ユーザーの投稿一覧 -->
    <div class="col-md-8 col-sm-11">
      <h2 class="col-lg-11 col-sm-12 head-line title_h2 bg-dark text-white text-center">過去の投稿</h2>
      <div class="row">
        <% @post_animals.each do |post_animal| %>
          <div class="col mb-2">
            <div class="card h-100" style="width: 18rem;">
              <%= link_to admins_post_animal_path(post_animal.id) do %>  <!--投稿をリンク化-->
                <%= image_tag post_animal.get_image, class: "card-img-top", size: "200x200" %>
                <h5 class="card-title text-dark ml-3">
                  <%= post_animal.user.name %>
                </h5>
                <div class="card-body text-dark">
                  <%= post_animal.caption %><br>
                  <%= post_animal.created_at.strftime('%Y/%m/%d') %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<!--ページネーション-->
<div class="row mt-3 user_show_img">
  <%= paginate @post_animals %>
</div>

