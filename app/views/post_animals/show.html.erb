<div class="container">
  <div class="row mt-2">
    <h2 class="col-2 head-line title_h2 bg-secondary text-white text-center">投稿詳細</h2>
  </div>
  <div class="row">
    <div class="col-6">
      <%= link_to user_path(@post_animal.user_id) do %>
        <%= image_tag @post_animal.get_image,size:"400x400" %>
      <% end %>
    </div>


    <!--詳細-->
    <div class="col-6">
    <table class="table table-borderless">
      <tbody>
        <thead>
          <tr>
            <td>
              <%= image_tag @post_animal.user.get_profile_image, size: '200x200', class:"rounded-circle" %>
            </td>
            <td>
              <%= link_to user_path(@post_animal.user_id) do %>
                <p class="h1 text-dark"><%= @post_animal.user.name %></p>
              <% end %>
              <p class="mt-4"><%= render "favorites/btn", post_animal: @post_animal %></p>
              <p><% if current_user != @post_animal.user %>
                  <% if current_user.name != "guestuser" %>
                    <% if current_user.following?(@post_animal.user) %>
                      <%= link_to "フォロー外す", user_relationships_path(@post_animal.user), method: :delete %>
                    <% else %>
                      <%= link_to "フォローする", user_relationships_path(@post_animal.user), method: :post %>
                    <% end %>
                  <% end %>
                <% end %>
              </p>
            </td>
          </tr>
          <tr>
            <td><p class="h2 mt-4"><%= @post_animal.caption %></p></td>
            <td><%= @post_animal.created_at.strftime('%Y/%m/%d') %></td>
            <td>
              <% if@post_animal.user_id == current_user.id %>
                <%= link_to "削除", post_animal_path, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %>
              <% end %>
            </td>
          </tr>
        </thead>
      </table>
      <table class="table text-center">
        <thead class="table">
          <tr class="text-center">
            <th width="20%">
              <p class="text mb-3">コメント件数：<%= @post_animal.animal_comments.count %></p>
            </th>
            <th width="10%"></th>
            <th width="50%"></th>
            <th width="20%"></th>
          </tr>
        </thead>
        <tbody>
          <% @post_animal.animal_comments.each do |animal_comment| %>
            <tr>
              <th>
                <%= image_tag animal_comment.user.get_profile_image, size: '100x100' %>
              </th>
              <th>
                <%= animal_comment.user.name %>
              </th>
              <th>
                <%= animal_comment.comment %>
              </th>
              <th>
                <%= animal_comment.created_at.strftime('%Y/%m/%d') %>
                <% if animal_comment.user == current_user %>
                  <%= link_to "削除", post_animal_animal_comment_path(@post_animal, animal_comment), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %>
                <% end %>
              </th>
            </tr>
          <% end %>
          <tr>
            <%= form_with model: [@post_animal, @animal_comment] do |f| %>
              <th>
                <%= f.text_area :comment, rows: '4', placeholder: "コメントをここに" %>
              </th>
              <th>
                <%= f.submit "送信する", class:"btn btn-outline-primary mt-5" %>
              </th>
            <% end %>
          </tr>
        </tbody>
      </tbody>
    </table>
    </div>
  </div>
</div>