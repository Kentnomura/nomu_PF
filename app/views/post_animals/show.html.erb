<div class="container bg-light">
  <div class="row mt-2">
    <h2 class="col-2 head-line title_h2 bg-secondary text-white text-center">投稿詳細</h2>
  </div>
  <div class="row">
    <div class="col-6">
      <%= link_to user_path(@post_animal.user_id) do %>
        <%= image_tag @post_animal.get_image,size:"400x400" %>
      <% end %>
      <h4 class="col-4 head-line title_h4 bg-secondary text-white text-center">投稿内容</h4>
      <p class="h2  text-white bg-dark text-center"><%= @post_animal.caption %></p>
      <div class="mb-3">
        <% if@post_animal.user_id == current_user.id %>
          <%= link_to "投稿削除", post_animal_path, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %>
        <% end %>
      </div>
    </div>


    <!--詳細-->
    <div class="col-6">
      <table class="table table-borderless">
        <thead class="table text-center">
          <tr class="text-center bg-dark text-white">
            <th>
              ユーザー画像
            </th>
            <th>
              名前
            </th>
            <th>
              いいね
            </th>
          </tr>
        </thead>
        <tbody class="table text-center">
          <tr>
            <th>
              <%= image_tag @post_animal.user.get_profile_image, size: '100x100', class:"rounded-circle" %>
            </th>
            <th>
              <%= link_to user_path(@post_animal.user_id) do %>
                <p class="h1 text-dark"><%= @post_animal.user.name %></p>
              <% end %>
            </th>
            <th>
              <div class="btn btn-light"  id="favorites_buttons_<%= @post_animal.id %>">
                <%= render "favorites/btn", post_animal: @post_animal %>
              </div>
              <p class="mt-3">
                <%= render "relationships/follow", post_animal: @post_animal %>
              </p>
              <%= @post_animal.created_at.strftime('%Y/%m/%d') %>
            </th>
          </tr>
        </tbody>
      </table>
      <table class="table text-center">
        <thead class="table">
          <tr class="text-center bg-dark text-white">
            <th width="20%" class="animal-comments-counter text mb-3">
              <%= render "animal_comments/counter", post_animal: @post_animal %>
            </th>
            <th width="10%">
              名前
            </th>
            <th width="50%">
              コメント
            </th>
            <th width="20%">
              日付
            </th>
          </tr>
        </thead>
        <tbody  id="comments_area">
          <%= render "animal_comments/index", post_animal: @post_animal %>
        </tbody>
        <%= render "animal_comments/form", post_animal: @post_animal, animal_comment: @animal_comment %>
      </tbody>
    </table>
    </div>
  </div>
</div>