<div class="container">
  <div class="row mt-3">
    <h2 class="col-3 head-line title_h2 bg-secondary text-white text-center">アカウント編集</h2>
  </div>

  <!--uesr情報更新機能-->
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= form_with model: @user, url: admins_user_path(@user), method: :patch do |f| %>
        <div class="row">
          <div class="col-2 mt-4">退会ステータス</div>
          <div class="col-3 mx-1 mt-4">
          <%= f.radio_button :is_valid, :true %>
          <%= f.label :is_deleted, "有効　　" %>
          <%= f.radio_button :is_valid, :false %>
          <%= f.label :is_deleted, "退会" %>
          </div>
        </div>
        <div class="form-group">
          <%= f.submit class: 'btn btn-info' %>
        </div>
      <% end %>
    </div>
  </div>
</div>