<% if current_user != post_animal %>
    <% if current_user.name != "guestuser" %>
      <% if current_user.following?(post_animal) %>
        <%= link_to user_relationships_path(post_animal), class:"text text-white", method: :delete, remote: true do %>
          <i class="fas fa-user-alt-slash"></i>フォロー外す
        <% end %>
      <% else %>
        <%= link_to user_relationships_path(post_animal), class:"text text-white", method: :post, remote: true do %>
          <i class="fas fa-user-alt"></i>フォローする
        <% end %>
    <% end %>
  <% end %>
<% end %>