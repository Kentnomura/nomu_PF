<% if current_user != post_animal %>
    <% if current_user.name != "guestuser" %>
      <% if current_user.following?(post_animal) %>
        <%= link_to "フォロー外す", user_relationships_path(post_animal), class:"text text-white", method: :delete, remote: true %>
      <% else %>
        <%= link_to "フォローする", user_relationships_path(post_animal), class:"text text-white", method: :post, remote: true %>
    <% end %>
  <% end %>
<% end %>