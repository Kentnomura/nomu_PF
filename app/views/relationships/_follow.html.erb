<% if current_user != post_animal.user %>
    <% if current_user.name != "guestuser" %>
      <% if current_user.following?(post_animal.user) %>
        <%= link_to "フォロー外す", user_relationships_path(post_animal.user), method: :delete, remote: true %>
      <% else %>
        <%= link_to "フォローする", user_relationships_path(post_animal.user), method: :post, remote: true %>
    <% end %>
  <% end %>
<% end %>