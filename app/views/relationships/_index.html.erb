<% users.each do |user| %>
  <tbody class="table-success">
    <tr>
      <th>
        <%= image_tag user.get_profile_image, size: '100x100', class:"rounded-circle" %>
      </th>
      <th class="pt-5">
        <%= link_to user_path(user) do %>
          <%= user.name %>
        <% end %>
      </th>
      <th class="pt-5">
        フォロー数: <%= user.followings.count %>
      </th>
      <th class="pt-5">
        フォロワー数: <%= user.followers.count %>
      </th>
    </tr>
  </tbody>
<% end %>