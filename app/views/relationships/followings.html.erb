<div class="container">
  <div class="row mt-2">
    <h2 class="col-lg-4 col-md-6 col-sm-10 head-line title_h2 bg-secondary text-white text-center">フォロー　一覧</h2>
  </div>
</div>


<% if @users.exists? %>
<div class="container">
  <div class="row mt-3">
    <div class="col-lg-12">
      <table class="table text-center table-hover">
        <thead class="table-danger">
          <tr class="text-center">
            <th>
              user画像
            </th>
            <th>
              ニックネーム
            </th>
            <th>
              フォロー数
            </th>
            <th>
              フォロワー数
            </th>
            <th>
              フォロー状態
            </th>
          </tr>
        </thead>
        <%= render "index", users: @users %>
      </table>
    </div>
  </div>
<% else %>
  <div class="container">
    <div class="row mt-2">
      <div class="col text text-center text-white">
        <h2>フォローは、いません</h2>
      </div>
    </div>
  </div>
</div>
<% end %>